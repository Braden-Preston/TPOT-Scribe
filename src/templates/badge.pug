mixin badge
  - var color = attributes.color || "purple"
  - var name = attributes.name || "bookmark"
  - var weight = color == 'yellow' ? '100' : '200'
  - var coloring = `bg-${color}-${weight} text-${color}-400`
  div(class=['flex items-center justify-center h-12 w-12 rounded-md', coloring])
    svg(
      class='h-6 w-6'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke='currentColor'
    )
      case name
        when 'home'
          path(
            d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
          )
        when 'document-add'
          path(
            d='M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
          )
        when 'pencil-alt'
          path(
            d='M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z'
