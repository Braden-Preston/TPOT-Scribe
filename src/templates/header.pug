mixin header
  div(class='bg-white shadow')
    //- div(class='sm:px-6 lg:px-8 mx-auto px-4')
      div(class='flex items-center justify-between h-16')
        div(class='flex items-center')
          //- .hidden(class='md:block')
            .ml-10.flex.items-baseline.space-x-4
              // Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"
              a.bg-gray-100.text-gray-500.px-3.py-2.rounded-md.text-sm.font-medium(href='#') Dashboard
              a.text-gray-400.px-3.py-2.rounded-md.text-sm.font-medium(class='hover:bg-gray-700 hover:text-white' href='#') Team
              a.text-gray-400.px-3.py-2.rounded-md.text-sm.font-medium(class='hover:bg-gray-700 hover:text-white' href='#') Projects
              a.text-gray-400.px-3.py-2.rounded-md.text-sm.font-medium(class='hover:bg-gray-700 hover:text-white' href='#') Calendar
              a.text-gray-400.px-3.py-2.rounded-md.text-sm.font-medium(class='hover:bg-gray-700 hover:text-white' href='#') Reports
        //- .hidden(class='md:block')
          .ml-4.flex.items-center(class='md:ml-6')
            button.bg-gray-800.p-1.rounded-full.text-gray-400(
              class='hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white'
            )
              span.sr-only View notifications
              // Heroicon name: bell
              svg.h-6.w-6(
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'
                aria-hidden='true'
              )
                path(
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9'
                )
            // Profile dropdown
            .ml-3.relative
              div
                button#user-menu.max-w-xs.bg-gray-800.rounded-full.flex.items-center.text-sm(
                  class='focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white'
                  aria-haspopup='true'
                )
                  span.sr-only Open user menu
                  img.h-8.w-8.rounded-full(
                    src='https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80'
                    alt
                  )
              //
                Profile dropdown panel, show/hide based on dropdown state.
                Entering: "transition ease-out duration-100"
                From: "transform opacity-0 scale-95"
                To: "transform opacity-100 scale-100"
                Leaving: "transition ease-in duration-75"
                From: "transform opacity-100 scale-100"
                To: "transform opacity-0 scale-95"
              .origin-top-right.absolute.right-0.mt-2.w-48.rounded-md.shadow-lg.py-1.bg-white.ring-1.ring-black.ring-opacity-5(
                role='menu'
                aria-orientation='vertical'
                aria-labelledby='user-menu'
              )
                a.block.px-4.py-2.text-sm.text-gray-700(class='hover:bg-gray-100' href='#' role='menuitem') Your Profile
                a.block.px-4.py-2.text-sm.text-gray-700(class='hover:bg-gray-100' href='#' role='menuitem') Settings
                a.block.px-4.py-2.text-sm.text-gray-700(class='hover:bg-gray-100' href='#' role='menuitem') Sign out
        //- .-mr-2.flex(class='md:hidden')
          // Mobile menu button
          button.bg-gray-800.inline-flex.items-center.justify-center.p-2.rounded-md.text-gray-400(
            class='hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white'
          )
            span.sr-only Open main menu
            //
              Heroicon name: menu
              Menu open: "hidden", Menu closed: "block"
            svg.block.h-6.w-6(
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              aria-hidden='true'
            )
              path(
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M4 6h16M4 12h16M4 18h16'
              )
            //
              Heroicon name: x
              Menu open: "block", Menu closed: "hidden"
            svg.hidden.h-6.w-6(
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
              aria-hidden='true'
            )
              path(
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M6 18L18 6M6 6l12 12'
              )
